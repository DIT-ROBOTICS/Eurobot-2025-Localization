<launch>

    <node pkg="lidar_localization_pkg" exec="lidar_localization" name="lidar_localization" output="screen">
    <!-- load ROS2 params from yaml -->
        <!-- <param from="$(find-pkg-share lidar_localization_pkg)/config/lidar_localization.yml" /> -->
